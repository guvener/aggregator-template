{
    "name": "guvener/aggregator-template",
    "type": "library",
    "description": "ContentFry Aggregator Template",
    "keywords": [
        "ContentFry",
        "Core"
    ],
    "homepage": "https://github.com/guvener/aggregator-template",
    "license": "MIT",
    "authors": [
        {
            "name": ":Guvener Gokce",
            "email": ":guvener@guvenergokce.com",
            "homepage": ":http://www.guvenergokce.com",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0",
        "guzzlehttp/guzzle": "^6.2",
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Aggregator\\": "src/",
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aggregator\\": "src/",
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
